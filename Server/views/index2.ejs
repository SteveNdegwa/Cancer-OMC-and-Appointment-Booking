                            <h3 class="unviewed-messages"><%= unviewedMessages %></h3>
                        <% } %>
                        <a href="/chats/chat-rooms" class="consults">Consults</a>
                    </li>
                    <li class="menu-items" id="records-item">
                        <a href="/records" class="records">Records</a>
                        <ul class="sub-menu">
                            <li class="sub-menu-items">
                                <a href="/records/payment-records" class="about-us">Payments</a>
                            </li>
                            <li class="sub-menu-items">
                                <a href="/records/appointment-records" class="doctors">Appointments</a>
                            </li>
                            <li class="sub-menu-items">
